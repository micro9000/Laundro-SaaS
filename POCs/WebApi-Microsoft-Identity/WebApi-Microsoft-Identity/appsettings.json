{
    "AzureAd": {
        "Instance": "https://<entra_subdomain>.ciamlogin.com/",
        "TenantId": "<tenant_id>",
        "ClientId": "<api_client_id>",
        "Scopes": {
            "Read": [ "user_impersonation" ],
            "Write": [ "user_impersonation" ]
        },
        "AppPermissions": {
            "Read": [ "All.ReadWrite" ],
            "Write": [ "All.ReadWrite" ]
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}